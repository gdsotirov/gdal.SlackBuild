diff -urNad gdal-1.11.5-orig/swig/python/GNUmakefile gdal-1.11.5/swig/python/GNUmakefile
--- gdal-1.11.5-orig/swig/python/GNUmakefile	2016-07-01 11:55:07.000000000 +0300
+++ gdal-1.11.5/swig/python/GNUmakefile	2016-10-22 09:59:11.000000000 +0300
@@ -68,9 +68,9 @@
 install:
 
 ifeq ($(PY_HAVE_SETUPTOOLS),1)
-	$(PYTHON) setup.py install 
+	$(PYTHON) setup.py install --root=${DESTDIR}
 else
-	$(PYTHON) setup.py install --prefix=$(DESTDIR)$(prefix)
+	$(PYTHON) setup.py install --root=${DESTDIR} --prefix=$(prefix)
 endif
 
 	for f in $(SCRIPTS) ; do $(INSTALL) ./scripts/$$f $(DESTDIR)$(INST_BIN) ; done
